@using OrchardCore.ContentManagement.Metadata.Models
@using OrchardCore.Html.ViewModels
@model HtmlBodyPartViewModel
@{
    const string theme = "/Cqc.Orchard.GdsAdminTheme/";
    var id = Html.IdFor(m => m.Html);
}

<div class="form-group">
    <label asp-for="Html">@Model.TypePartDefinition.DisplayName()</label>
    <textarea asp-for="Html"></textarea>
    <span class="hint">@T["The body of the content item."]</span>
</div>

<script asp-name="TinyMCE" at="Foot"></script>
<script at="Foot" depends-on="TinyMCE">
    tinymce.init({
        selector: '#@id',
        height: 600,
        content_css: "@(theme)gds.min.css",
        body_class: "",

        plugins: 'code fullscreen table preview anchor template lists link image visualblocks',
        menubar: 'file edit insert view table tools help',
        toolbar_mode: 'floating',
        toolbar: [
            'styleselect | alignleft aligncenter alignright alignjustify | bullist numlist | ' +
            'undo redo | link unlink image | anchor | table template | ' +
            'code fullscreen preview visualblocks'
        ],

            style_formats: [
                {
                    title: "Headings", items: [
                        { title: "Header 1", format: "h1" },
                        { title: "Header 2", format: "h2" },
                        { title: "Header 3", format: "h3" },
                    { title: "Header 4", format: "h4" }
                ]
            },
            { title: "Paragraph", format: "p" }
        ],

        extended_valid_elements: [
            'p[class=govuk-body]',
            'a[class=govuk-link|href|title]',
            'ul[class=govuk-list govuk-list--bullet]',
            'ol[class=govuk-list govuk-list--number]',
            'table[class=govuk-table]',
            'thead[class=govuk-table__head]',
            'tbody [class=govuk-table__body]',
            'th[class=govuk-table__header]',
            'td[class=govuk-table__cell]',
            'h1[class=govuk-heading-xl]',
            'h2[class=govuk-heading-l]',
            'h3[class=govuk-heading-m]',
            'h4[class=govuk-heading-s]'
        ],

        templates: [
            { title: 'Accordian', description: "", url: '@(theme)templates/accordian.html' },
            { title: 'Button', description: "", url: '@(theme)templates/button.html' },
            { title: 'Details', description: "", url: '@(theme)templates/details.html' },
            { title: 'Inset Text', description: "", url: '@(theme)templates/inset-text.html' },
            { title: 'Panel', description: "", url: '@(theme)templates/panel.html' },
                { title: 'Table', description: "", url: '@(theme)templates/table.html' },
                { title: 'Tabs', description: "", url: '@(theme)templates/tabs.html' },
                { title: 'Warning', description: "", url: '@(theme)templates/warning.html' },
                { title: 'Columns 2 thirds / 1 third', description: "", url: '@(theme)templates/columns-2thirds-1third.html' },
                { title: 'Columns 1 third / 2 thirds', description: "", url: '@(theme)templates/columns-1third-2thirds.html' },
                { title: 'Columns 1 half / 1 half', description: "", url: '@(theme)templates/columns-1half-1half.html' },
                { title: 'Columns 1 third / 1 third / 1 third', description: "", url: '@(theme)templates/columns-1third-1third-1third.html' }
            ],

        }

    );
</script>